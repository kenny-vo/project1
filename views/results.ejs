  <!-- Bootstrap CSS from CDN -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <!-- Custom Fonts -->
  <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css">
  <!-- link to custom stylesheet (always require after Bootstrap) -->
  <link rel="stylesheet" href="../stylesheets/main.css" media="screen" title="no title" charset="utf-8">
  <!-- jQuery from CDN -->
  <script src="https://code.jquery.com/jquery-3.2.1.js" integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE=" crossorigin="anonymous">
  </script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  <script src="../scripts/app.js"></script>
  <!-- link to custom javascript file (always require after external JS libraries) -->
  <!--<script type="text/javascript" src="js/app.js"></script>-->

  <title>epikBite</title>

</head>

<body>
  <div class="container-fluid">
  <nav class="navbar navbar-default navbar-fixed-top">
    <a href="#" class="navbar-brand navbar-left" style="color: white">epikbites</a>
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" style="color: black" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
      </button>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right" style="border-right-width: 20px;margin-right: 30px;">
        <% if(user){ %>
          Hello
          <%= user.fb.firstName  %>
        <li><a class="btn btn-default logout" href="/logout" role="button"> Logout</a></li>
          <% } else {  %>
        <li><a class="btn btn-default signup" href="/login/facebook" role="button">Login with Facebook</a></li>
          <% } %>
      </ul>
    </div>
</div>
</nav>
<!--*********************SEARCHBAR ROW*********************-->
<form action="/search" method="GET">
  <div class="row searchbarRow" style="top: 0px;">
    <div class="col-md-6 col-md-offset-3 searchbarCol">
      <input type=search id="searchbar" class="searchbar" results=5 placeholder="Search by: menu item..." autosave=5 name="q" style="margin-top: 70px;">
      <div class="row toggleButtonsRow" style="top: 0px;">
        <div class="col-md-4 col-md-offset-4 toggleButtonsCol" style="top: 0;">
          <center class="toggleButtons" style="margin-top: 5px; margin-bottom: 5px"style="top: 0px;bottom: 0px;height: 600px;">
            <input type="submit" class="restaurant" value="menu item">
          </center>
        </div>
      </div>
    </div>
  </div>
</form>
<!--********************MOST RECENT ROW********************-->
<div class="row mostRecentRow scroll" style="top: 0px;bottom: 0px;height: 600px; right: 18%;">
      <div class="col-md-8 col-md-offset-4 mostRecentCol">
          <% for (var i = 0; i < 10; i++) { %>
            <div class="thumbnail" id=<%= results[i].id%> >
              <div class="card mb-3">
                <img class="card-img-top center-block" src= <%= results[i].image_url %> style="width:60%; height:60%;"  alt="Card image cap">
                <div class="card-block center-block">
                  <h4 class="card-title"> <%= results[i].name %> </h4>
                  <p class="card-text">YELP's Rating: <%= results[i].rating %> </p>
                  <p class="card-text"><small class="text-muted"><a href= <%= results[i].url %> ></a></small></p>
                  <form action="/restaurant/<%= results[i].id %>" method="GET">
                    <input type="submit" class="btn btn-primary center-block" value="Menu">
                  </form>
                </div>
              </div>
            </div>
            <% } %>
      </div>
    <!--closes mostRecentRow-->
    </div>
<!--**********************FOOTER ROW***********************-->
<footer class="navbar navbar-default navbar-fixed-bottom">
  <p class="text-muted" align="center"> Copyright 2017 </p>
</footer>
<!--*******************************************************-->
  <!--closes main container-->
</body>
</html>
