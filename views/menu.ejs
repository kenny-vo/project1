<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">

  <!-- set viewport to device width to allow responsiveness -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS from CDN -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <!-- Custom Fonts -->
  <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css">
  <!-- link to custom stylesheet (always require after Bootstrap) -->
  <link rel="stylesheet" href="../stylesheets/main.css" media="screen" title="no title" charset="utf-8">
  <!-- jQuery from CDN -->
  <script src="https://code.jquery.com/jquery-3.2.1.js" integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE=" crossorigin="anonymous">
  </script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  <script src="../scripts/app.js"></script>
  <!-- link to custom javascript file (always require after external JS libraries) -->
  <!--<script type="text/javascript" src="js/app.js"></script>-->

  <title>epikEats</title>

</head>

<body>
  <div class="container-fluid">
        <!--**********************NAVBAR***********************-->
  <nav class="navbar navbar-default navbar-fixed-top">
    <a href="/" class="navbar-brand navbar-left home" style="color: white">epikEats</a>
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" style="color: black" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
      </button>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right" style="border-right-width: 20px;margin-right: 30px;">
        <% if(user){ %>
          Hello
          <%= user.fb.firstName  %>
        <li><a class="btn btn-default logout" href="/logout" role="button"> Logout</a></li>
          <% } else {  %>
        <li><a class="btn btn-default signup" href="/login/facebook" role="button">Login with Facebook</a></li>
          <% } %>
      </ul>
    </div>
</div>
</nav>
<!--*********************SEARCHBAR ROW*********************-->
<form action="/search" method="GET">
  <div class="row searchbarRow" style="top: 0px;">
    <div class="col-md-6 col-md-offset-3 searchbarCol">
      <input type=search class="searchbar" results=5 placeholder="Search by: menu item..." autosave=5 name="q" style="margin-top: 70px;">
      <div class="row toggleButtonsRow" style="top: 0px;">
        <div class="col-md-4 col-md-offset-4 toggleButtonsCol" style="top: 0;">
          <center class="toggleButtons" style="margin-top: 5px; margin-bottom: 5px"style="top: 0px;bottom: 0px;height: 600px;">
            <input type="submit" class="restaurant" value="menu item">
          </center>
        </div>
      </div>
    </div>
  </div>
</form>

<!--********************MENU ROW********************-->
    <div class="row menuRow">
      <div class="col-md-4 col-md-offset-4 menuCol" style="margin-top: 250px;">
        <div class="menuColTR"><div class="menuColTL"><div class="menuColBR"><div class="menuColBL">
          <p class="menuTitle"><%= restaurant.name %>'s Menu</p>
          <center>
          <form id="newItem">
            <input type="text" class="form-control" name="newItem" placeholder="New Menu Item Here">
            <input type="hidden" name="restaurant-Id" value="<%= restaurant.id %>">
            <input type="submit" class="btn btn-default" >
          </form>
          <div id='results'>
              <% restaurant.menuItems.forEach(function(name){ %>
                <ul class="list-group">
                  <li class="list-group-item"><%=name %><span>
                  <form id="delteItem">
                    <input type="hidden" name="restaurant-Id" value="<%= restaurant.id %>">
                    <input type="hidden" name="item-Id" value="<%= name.id %>">
                    <input type="submit" class="btn btn-danger" value="delete">
                  </form></span>
                </li>
              </ul>
                  <%  }) %>
          </div>
          </center>

        </div></div></div></div>
      </div>
    <!--closes menuRow-->
    </div>
    <!--**********************FOOTER***********************-->
    <footer class="navbar navbar-default navbar-fixed-bottom">
      <p class="text-muted" align="center"> Copyright 2017 </p>
    </footer>
    <!--*******************************************************-->
      <!--closes main container-->
    </body>

</html>
