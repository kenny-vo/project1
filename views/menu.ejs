<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">

    <!-- set viewport to device width to allow responsiveness -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS from CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

    <!-- link to custom stylesheet (always require after Bootstrap) -->
    <link rel="stylesheet" href="../stylesheets/main.css" media="screen" title="no title" charset="utf-8">
    <!-- jQuery from CDN -->
    <script
      src="https://code.jquery.com/jquery-3.2.1.js"
      integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE="
      crossorigin="anonymous">
    </script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="../scripts/app.js"></script>
    <!-- link to custom javascript file (always require after external JS libraries) -->
    <!--<script type="text/javascript" src="js/app.js"></script>-->

    <title>EpiKBite</title>
</head>

<body>
  <!--main container-->
  <div class="container-fluid">
<!--**********************HEADER ROW***********************-->
    <div class="row headerRow">
      <div class="col-md-3 hamburgerCol">
        <i class="fa fa-bars fa-5x" aria-hidden="true"></i>
      </div>
      <div class="col-md-6 logoTaglineCol">
        <center><img src='../images/v1Logo.png' class="logo" width="261" height="98"></center>
        <center><p class="tagline">“Write, review and share the menu.”</p></center>
      </div>
      <div class="col-md-3 loginSignupCol">
        <center class="loginSignup">
        <% if(user){ %>
          Hello <%= user.fb.firstName %>
          <a class="btn btn-default logout" href="/logout" role="button">Logout</a>
        <% } else {  %>
          <a class="btn btn-default signup" href="/login/facebook" role="button">Login with Facebook</a>
        <% } %>
        <!-- <input type="button"  class="signup"  value=" Signup "  onclick="document.form.action='http://example.com/registrationPage.php'; document.form.submit();"></center> -->
      </div>
    <!--closes headerRow-->
    </div>
<!--*********************SEARCHBAR ROW*********************-->
<form action="/search" method="GET">
    <div class="row searchbarRow">
      <div class="col-md-6 col-md-offset-3 searchbarCol">
        <input type=search id="searchbar" class="searchbar" results=5 placeholder="Search by: menu item..." autosave=5 name="q">
    <!--closes searchbarRow-->
    </div>
<!--******************TOGGLE BUTTONS ROW*******************-->
    <div class="row toggleButtonsRow">
      <div class="col-md-4 col-md-offset-4 toggleButtonsCol">
        <center class="toggleButtons">
        <input type="submit"  class="restaurant"  value="menu item" >
        <input type="submit"  class="restaurant"  value="restaurant" >
      </center>
      </div>
    <!--closes toggleButtonsRow-->
    </div>
  </form>
<!--********************MENU ROW********************-->
    <div class="row menuRow">
      <div class="col-md-4 col-md-offset-4 menuCol">
        <div class="menuColTR"><div class="menuColTL"><div class="menuColBR"><div class="menuColBL">
          <p class="menuTitle"><%= restaurant.name %>'s Menu</p>
          <center>
          <form id="newItem">
            <input type="text" class="form-control" name="newItem" placeholder="New Menu Item Here">
            <input type="hidden" name="restaurant-Id" value="<%= restaurant.id %>">
            <input type="submit" class="btn btn-default" >
          </form>
          <div id='results'>
              <% restaurant.menuItems.forEach(function(name){ %>
                <ul class="list-group">
                  <li class="list-group-item"><%=name %><span>
                  <form id="delteItem">
                    <input type="hidden" name="restaurant-Id" value="<%= restaurant.id %>">
                    <input type="hidden" name="item-Id" value="<%= name.id %>">
                    <input type="submit" class="btn btn-danger" value="delete">
                  </form></span>
                </li>
              </ul>
                  <%  }) %>
          </div>
          </center>

        </div></div></div></div>
      </div>
    <!--closes menuRow-->
    </div>
<!--**********************FOOTER ROW***********************-->
    <div class="row footerRow">
      <div class="col-md-12 footerCol">
        <center><p class="copyright">Copyright Now-ish</p></center>
      </div>
    <!--closes footerRow-->
    </div>
<!--*******************************************************-->
  <!--closes main container-->
  </div>
</body>

</html>
